@model ShopTest1.ViewModels.FormViewModel


<div class="modal-dialog modal-lg  modal-dialog-centered">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row ">
                    <div class="col-lg-6 ">
                        <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@Model.product.Img1" class="d-block w-100 h-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Model.product.Img2" class="d-block w-100 h-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Model.product.Img3" class="d-block w-100 h-100" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="card-body">
                            <b class="card-text">@Model.product.ProductName</b>
                            <p class="card-text">&dollar;@Model.product.ProductPrice</p>
                            <br />
                            <p class="card-text">@Model.product.ProductDescription</p>

                            <div class="row">
                                <div class="col-5 col-md-6">
                                    <div class="qty border-left">
                                        <span class="minus bg-dark">-</span>
                                        <input type="number" class="count" name="qty" value="1">
                                        <span class="plus bg-dark">+</span>
                                    </div>
                                </div>
                                <div class="col-7 col-md-4 ">
                                    <button class="texttt btn btn-primary">ADD TO CART</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    
    $(function () {
        $('.carousel-inner').carousel({
            interval: false
        })
    
    });
</script>